
    <div class="modal" app-show="view.modal == 'delete_confirm'" anim="{'enter':'fade-in'}">

        <div class="modal-body" anim="{'enter':'move-up','duration':'0.2'}">

            <div class="grid col-2 pb-1">
                <div>
                    <h4 class="text-light capitalise">
                        Delete <%- view.functions.depluralise(table) %>?
                    </h3>
                </div>
                <div class="text-right">
                    <h4 class="text-light clickable" onclick="modalCloseAll()">&times;</h4>
                </div>

                <div class="text-right pt-1">
                    <a class="btn border w-100" onclick="modalCloseAll()">
                        Cancel
                    </a>
                </div>

                <div class="text-right pt-1">
                    <a class="btn highlight w-100" app-click="deleteItem('<%- table %>',context)">
                        Delete
                    </a>
                </div>
            </div>

        </div>

    </div>
