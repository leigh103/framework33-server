.dashboard {

    height: 100vh;
    width: 100vw;
    overflow: hidden;
    display: flex;
    flex-direction: row;

    .widget {
        background-color: #fff;
        padding: 2rem;
        box-shadow: $shadow;
        border-radius: 5px;
        max-height: 300px;
        overflow-y: auto;

        .note {
            font-size: 0.875rem;
            background-color: #f2f2f2;
            padding: 1rem;
            margin-bottom: 0.875rem;
            border-radius: 5px;

            .title {
                font-weight: 600;

                .date {
                    opacity: 0.5;
                }
            }
        }
    }

    .side-nav {
        height: 100vh;

        overflow-y: auto;
        overflow-x: hidden;
        background-color: $color-dark-grey;
        text-align: left;
        font-size: 0.9rem;
        z-index: 1;

        @media $desktop {
            flex: 0 0 17.5rem;
        }

        @media $medium {
            flex: 0 0 12rem;
        }

        @media $small {
            display: none;
        }

        .logo {

            display: flex;
            align-items: center;
            justify-content: flex-start;
            width:100%;
            height: 3.5rem;
            padding: 0 1.5rem;
            margin: 2rem 0;

            a {
                display:block;
                height: 100%;
                width: 100%;
            }

            img {
                display: block;
                height: 100%;
                width: auto;
            }
        }

        .link {

            a {
                display: flex;
                align-items: center;
                justify-content: flex-start;
                width:100%;
                height: 3rem;
                padding: 0 1.5rem;
                cursor: pointer;

                &:hover {
                    background-color: rgba(255,255,255,0.5)
                }

                &.active {
                    background-color: rgba(255,255,255,0.5);
                    border-left: 3px solid $color-primary;
                }
            }

            .subitems {

                a {
                    display: flex;
                    align-items: center;
                    justify-content: flex-start;
                    width:100%;
                    height: 2.5rem;
                    padding: 0 2rem 0 3rem;
                    cursor: pointer;
                    font-size: 0.9em;

                    &:hover {
                        background-color: rgba(255,255,255,0.2)
                    }

                    &:last-child {
                        margin-bottom: 1rem;
                    }
                }

            }

            img {
                height: 2rem;
                width: auto;
            }


        }

        a {
            display: block;
            color: white;
        }
    }

    .page {
        background-color: $bg-light-grey;
        height: 100vh;
        flex:1;
        overflow-y: auto;
        overflow-x: hidden;
        padding: 2rem;
        text-align: left;
        z-index: 2;
    }

}
