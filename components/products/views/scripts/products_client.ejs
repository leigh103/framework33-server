<script>

    extend.products = function(){

        watch['view.gallery_image'] = function(data, old){
            console.log(data, old)
        }

        scope.view.gallery_image = false
        scope.view.add_item = {
            quantity: 1,
            _key:''
        }

        scope.quantity = function(type){
            if (type == 'add'){
                scope.view.add_item.quantity++
            } else if (scope.view.add_item.quantity > 1){
                scope.view.add_item.quantity--
            }
        }

    }

</script>
