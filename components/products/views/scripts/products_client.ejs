<script>

    extend.products = function(){

        <% if (typeof product == 'object' && typeof product.image != 'undefined'){ %>
            scope.view.gallery_image = '<%- product.thumbnail %>'
        <% } else { %>
            scope.view.gallery_image = '/images/Product_Placeholder.svg'
        <% } %>
        scope.view.add_item = {
            quantity: 1,
            _key:''
        }

        scope.quantity = function(type){
            if (type == 'add'){
                scope.view.add_item.quantity++
            } else if (scope.view.add_item.quantity > 1){
                scope.view.add_item.quantity--
            }
            view.update('view.add_item.quantity')
        }

        scope.selectImage = function(url){
            scope.view.gallery_image = url
            view.update('view.gallery_image')
        }

    }

</script>
