<% layout('default/page.ejs') -%>

<section class="vh-60 relative flex flex-middle flex-column bg-33-light-grey bg-cover" style="background-image: url('<%- category.data.image %>')">
    <div class="background bg-33-transparent-dark-grey"></div>
    <h1 class="text-33-white mb-1" anim="{'enter':'fade-in','duration':'3s'}"><%- category.data.name %></h1>
    <div class="contain">
        <div class="contain">
            <h2 class="text-33-white" style="font-size: 1.2em" anim="{'enter':'move-down','delay':'1s','duration':'2s'}"><%- category.data.sub_title %></h2>
        </div>
    </div>
</section>

<section class="py-6">

    <div class="contain">

        <div class="contain mb-6">
            <p class="h6 lh2"><%- category.data.description %></p>
        </div>

        <div class="grid col-4 col-s-2 gap-2">

            <% products.forEach((product,i)=>{ %>

                <a class="block" href="/<%- category.data.slug %>/<%- product.slug %>">

                    <img src="<%- product.image_1 %>">
                    <h2 class="h4"><%- product.name %></h2>
                    <h3 class="h6 text-weight-600">Â£<%- product.price %></h3>

                </a>

            <% }) %>

        </div>

    </div>

</section>
