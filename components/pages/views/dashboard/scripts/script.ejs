                    scope.selectPreviewSection('none')
                    scope.view.selected_block = {}
                } else if (section == 'init'){
                    scope.view.menu = 'main'
                    scope.view.tab = 'blocks'

                } else if (section == 'edit'){
                    scope.view.tab = 'content'
                }
