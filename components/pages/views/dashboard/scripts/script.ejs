            scope.deletePage = function(conf, template){

                if (conf){

                    scope.openModal('delete_conf')

                } else {

                    let post_url

                    if (template === true){
                        scope.delete('pages-templates',scope.view.pages._key).then(()=>{
                            window.location.href = '/dashboard/pages/templates'
