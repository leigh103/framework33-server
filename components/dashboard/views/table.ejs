<% layout(config.site.theme+'/dashboard.ejs') -%>

    <div class="header">
        <div class="title">
            <h1><%- title %></h1>
        </div>
        <div class="buttons">

            <% if (typeof table_buttons != 'undefined'){ %>
                <% table_buttons.forEach(button => { %>
                    <%- button %>
                <% }) %>
            <% } %>
            <a class="btn bg-primary" href="/dashboard/<%- table %>/new">Add <%- view.functions.parseName(table,true) %><span class="icon plus right white"></span></a>
        </div>
    </div>

    <div class="actions">

        <div class="tabs">
            <% if (typeof tabs != 'undefined'){ %>
                <% tabs.forEach(tab => { %>
                    <a href="<%- tab.href %>" class="<% if (path == tab.href){ %>active<% } %>"><%- tab.text %></a>
                <% }) %>
            <% } %>
        </div>

        <% if (typeof search_fields == 'object'){ %>
            <div class="search">
                <span class="icon search black"></span>
                <input type="text" app-change="search('<%- table %>')" placeholder="Search by <%- view.functions.parseSearchFields(search_fields) %>">
            </div>
        <% } %>
    </div>

    <%- include(basedir+'/components/dashboard/views/partials/table.ejs') %>

    <div class="fixed bottom left w-100 p-2 hidden-m hidden-d">
        <button class="btn highlight" app-click="newObj('<%- table %>')">New <%- view.functions.parseName(table,true) %></button>
    </div>

    <div id="context" class="context dropdown text-left" style="display: none">

        <% if (typeof context_menu == 'object'){ %>

            <% context_menu.forEach((item,i) => { %>

                <div class="link" app-click="<%- item.function %>('<%- table %>')">
                    <span class="icon <%- item.icon %>"></span>
                    <%- item.text %>
                </div>

            <% }) %>

        <% } %>

        <div class="link" app-click="editItem('<%- table %>')">
            <span class="icon edit left primary"></span>
            Edit
        </div>
        <div class="link" app-click="deleteItem('<%- table %>')">
            <span class="icon bin left primary"></span>
            Delete
        </div>


    </div>
