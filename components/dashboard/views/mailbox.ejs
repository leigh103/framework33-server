<% layout('default/dashboard.ejs') -%>

    <div class="grid col-9 h-100 page-full mailbox" app-init="getMailbox('<%- user._key %>')">

        <div class="colspan-3 messages">
            <div app-for="message in admin.mailbox" app-attr="{'id':'message'+{{index}}}" class="message-summary grid col-12 gap-1 clickable" app-click="openMessage(message)" app-class="{'open':message.date == view.mailbox.date}">

                <div class="colspan-2 flex flex-middle">
                    <img src="/images/Profile_Placeholder.svg" app-src="message.from.avatar" class="avatar sm">
                </div>
                <div class="colspan-10 grid col-6">
                    <div class="colspan-4">
                        <div class="text" app-bind="message.from.name"></div>
                        <div class="title">
                            <div app-bind="message.subject"></div>

                        </div>
                        <div app-bind="message.text"></div>
                    </div>
                    <div class="colspan-2 text-right text-33-grey">
                        <div class="mb-1" app-bind="parseDate(message.date,'ago')"></div>
                        <a app-click="deleteMessage(message,{{index}})" class="text-33-red"><i class="fas fa-trash-alt"></i></a>
                    </div>

                </div>

            </div>
        </div>
        <div class="colspan-6 message">

            <div app-show="view.mailbox">
                <h3 app-bind="view.mailbox.subject"></h3>
                <p class="my-2 text-small italic">From <span app-bind="view.mailbox.from.name"></span>, <span app-bind="parseDate(view.mailbox.date,'h:mma dddd Do MMM')"></span></p>
                <p app-bind="view.mailbox.text"></p>
            </div>

        </div>

    </div>
