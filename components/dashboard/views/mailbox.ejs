<% layout('default/dashboard.ejs') -%>

    <div class="grid col-10 h-100 page-full mailbox" app-init="getMailbox('<%- user._key %>')">

        <div class="colspan-4 messages">
            <div app-for="message in admin.mailbox" class="message-summary grid col-12 gap-1 clickable" app-click="view.message = message" app-class="{'open':message.date == view.message.date}">

                <div class="colspan-2">
                    <img src="/images/Profile_Placeholder.svg" app-src="message.from.avatar" class="avatar sm">
                </div>
                <div class="colspan-10 grid col-6">
                    <div class="colspan-4">
                        <div class="text" app-bind="message.from.name"></div>
                        <div class="title">
                            <div app-bind="message.subject"></div>

                        </div>
                        <div app-bind="message.text"></div>
                    </div>
                    <div class="colspan-2 text-right text-33-grey">
                        <div class="mb-1" app-bind="parseDate(message.date,'ago')"></div>
                        <a app-click="deleteMessage(message)" class="text-33-red"><i class="fas fa-trash-alt"></i></a>
                    </div>

                </div>

            </div>
        </div>
        <div class="colspan-6 message">

            <div app-show="view.message">
                <h3 app-bind="view.message.subject"></h3>
                <p class="my-2 text-small italic">From <span app-bind="view.message.from.name"></span>, on <span app-show="view.message.date" app-bind="view.message.date"></span></p>
                <p app-bind="view.message.text"></p>
            </div>

        </div>

    </div>
