<% layout(basedir+'/themes/default/dashboard.ejs') -%>

<% if (typeof title == 'undefined'){ var title = ''} %>
<% if (typeof view.current_sub_view == 'undefined'){ view.current_sub_view = ''} %>

    <div class="header-mobile">
        <div>
            <div class="burger colspan-1" onclick="toggleMenu('.page')">
                <i class="fas fa-bars"></i>
            </div>
        </div>
        <div>
            <% if (typeof search_fields == 'object'){ %>
                <div class="search">
                    <input type="text" app-change="search('<%- table %>')" placeholder="Search">
                    <span class="icon search black"></span>
                </div>
            <% } %>
        </div>
    </div>

    <div class="header">
        <div class="title">
            <h1 class="mr-1"><%- title %></h1><input type="text" class="flex-1 search" app-change="search('<%- table %>')" placeholder="Search <%- view.functions.parseName(table,true) %>">
        </div>
        <div class="buttons">

            <% if (typeof action_buttons != 'undefined'){ %>
                <% action_buttons.forEach(button => { %>
                    <a <% if (button.href){ %> href="<%- button.href %>"<% } %> <% if (button.click){ %> app-click="<%- button.click %>"<% } %> class="btn <% if (title.toLowerCase() == button.text.toLowerCase() || view.current_sub_view.toLowerCase() == button.text.toLowerCase()){ %>bg-primary<% } else { %>bg-white<% } %>"><%- button.text %></a>
                <% }) %>
            <% } %>
            <a class="btn bg-primary" href="/dashboard/<%- table %>/new">Add <span class="hidden-s">&nbsp;<%- view.functions.parseName(table,true) %></span><span class="icon plus right white"></span></a>

        </div>
    </div>

    <% if (typeof grid_view != 'undefined' && grid_view == 'compact'){ %>
        <%- include(basedir+'/components/dashboard/views/partials/grid-compact.ejs') %>
    <% } else { %>
        <%- include(basedir+'/components/dashboard/views/partials/grid.ejs') %>
    <% } %>

    <div id="context" class="context dropdown text-left" style="display: none">

        <% if (typeof context_menu == 'object'){ %>

            <% context_menu.forEach((item,i) => { %>

                <div class="link" app-click="<%- item.function %>('<%- table %>')">
                    <span class="icon <%- item.icon %> primary"></span>
                    <%- item.text %>
                </div>

            <% }) %>

        <% } %>

        <div class="link" app-click="editItem('<%- table %>')">
            <span class="icon edit left primary"></span>
            Edit
        </div>
        <div class="link" app-click="deleteItem('<%- table %>')">
            <span class="icon bin left primary"></span>
            Delete
        </div>


    </div>
