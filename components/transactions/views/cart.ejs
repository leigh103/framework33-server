<% layout('default/page.ejs') -%>

<section class="pt-7 pb-4">

    <div class="contain text-left">

        <h1 class="h2">Your <%- cart_name %></h1>
        <h4><%- cart.reference %></h4>

        <section>

            <div class="grid col-4 gap-1 my-2">
                <div class="colspan-2">Item</div>
                <div class="text-center">Qty</div>
                <div class="text-right">Price</div>
            </div>

            <div>
                <div class="grid col-4 gap-1 my-2" app-for="item in cart.items">
                    <div class="colspan-2"><a app-click="removeFromCart(item._key)" class="text-33-red mr-1"><i class="fas fa-times"></i></a> <a href="" app-bind="item.name"></a></div>
                    <div class="text-center" app-bind="item.quantity"></div>
                    <div class="text-right">£<span app-bind="item.price"></span></div>
                </div>
            </div>

            <div class="grid col-4 gap-1 my-2">
                <div><a app-click="emptyCart()">Empty <%- cart_name %></a></div>
                <div></div>
                <div></div>
                <div class="grid col-2 gap-1">

                    <div>Sub Total</div>
                    <div class="text-right">£<span app-bind="cart.sub_total"></span></div>
                    <div>VAT</div>
                    <div class="text-right">£<span app-bind="cart.tax"></span></div>
                    <div class="text-weight-500">Total</div>
                    <div class="text-right text-weight-500">£<span app-bind="cart.total"></span></div>

                </div>
            </div>

        </section>
    </div>

</section>
