<a class="block text-center" href="<% if (typeof parent_category == 'object'){ %>/<%- parent_category.slug %><% } %>/<%- category.slug %>/<%- product.slug %>">

    <img src="<%- product.image %>">
    <h2 class="h6"><%- product.name %></h2>
    <h3 class="h6 text-weight-600"><%- view.functions.parseCurrency(product.price) %></h3>

</a>
