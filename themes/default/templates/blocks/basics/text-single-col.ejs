<section class="py-6 <% if (typeof styling != 'undefined' && styling.background){ %><%- styling.background.class %><% } %>" style="<% if (typeof styling != 'undefined'){ %><%- functions.parseStyle(styling) %><% } %>" app-block="Text Single Column" app-block-description="This is a single column text block" app-allow-styling="true">

    <div class="contain <%- styling.container.class %>">

        <% if (data.heading){ %><h2 app-input="text" app-field="heading"><%- data.heading %></h2><% } %>

        <% if (data.sub_heading){ %><h4 class="my-1" app-input="text" app-field="sub_heading"><%- data.sub_heading %></h4><% } %>

        <% if (data.text){ %>
            <div class="" app-input="textarea" app-field="text">
                <%- data.text %>
            </div>
        <% } %>

        <% if (data.call_to_action_link){ %>
            <a class="btn bg-primary" href="<%- data.call_to_action_link %>" app-input="text" app-field="call_to_action_link">
                <span app-field="call_to_action_text" app-input="text"><%- data.call_to_action_text %></span>
                <% if (data.call_to_action_icon){ %><span class="icon right white <%- data.call_to_action_icon %>" app-field="call_to_action_icon" app-input="icon"></span><% } %>
            </a>
        <% } %>

    </div>

</section>
