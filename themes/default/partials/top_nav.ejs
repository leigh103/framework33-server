
<section class="nav <% if (typeof pages != 'undefined' && pages.hide_top_nav && pages.hide_top_nav === true) { %> auto-hide" app-class="{'auto-hide-shown':view.sub_0 == true}"<% } else { %>no-auto-hide"<% } %>>

    <div class="contain h-100 grid col-4">

        <div class="link text-left logo">
            <a href="/" class="logo"><% if (typeof view != 'undefined' && view.logo){ %><img src="<%- view.logo %>"><% } %></a>
        </div>

        <div class="links colspan-3 text-right overflow-x">
            <%- include(config.site.theme_path+'/partials/menu.ejs',{menu:view.menus.nav}) %>
        </div>

        <div class="burger colspan-1 flex flex-middle-right" onclick="toggleMenu('.mega-menu')">
            <i class="fas fa-bars"></i>
        </div>

    </div>

</section>

<section class="mega-menu">

    <div class="clickable flex flex-middle-right mb-2 text-white text-big" onclick="toggleMenu('.mega-menu')">
        <i class="fas fa-times"></i>
    </div>

    <%- include(config.site.theme_path+'/partials/menu.ejs',{menu:view.menus.nav}) %>

</section>
