<div class="editor-buttons bg-33-frosted-light overflow-x">

    <button app-click="exec('formatBlock','<h1>')">H1</button>
    <button app-click="exec('formatBlock','<h2>')">H2</button>
    <button app-click="exec('formatBlock','<h3>')">H3</button>
    <button app-click="exec('formatBlock','<h4>')">H4</button>
    <button app-click="exec('formatBlock','<p>')"><i class="fas fa-paragraph"></i></button>
    <button app-click="exec('formatBlock','<blockquote>')"><i class="fas fa-quote-left"></i></button>
    <button app-click="exec('removeFormat')"><i class="fas fa-remove-format"></i></button>

    <div class="spacer"></div>
    <button app-click="exec('bold')"><i class="fas fa-bold"></i></button>
    <button app-click="exec('italic')"><i class="fas fa-italic"></i></button>
    <button app-click="exec('createLink')"><i class="fas fa-link"></i></button>
    <button app-click="exec('createLinkButton')"><i class="fas fa-square"></i></button>
    <button app-click="exec('insertImage')"><i class="fas fa-image"></i></button>
    <button app-click="exec('insertIcon')"><i class="fas fa-icons"></i></button>
    <div class="spacer"></div>
    <button app-click="exec('insertUnorderedList')"><i class="fas fa-list-ul"></i></button>
    <button app-click="exec('insertOrderedList')"><i class="fas fa-list-ol"></i></button>
    <div class="spacer"></div>
    <button app-click="exec('justifyLeft')"><i class="fas fa-align-left"></i></button>
    <button app-click="exec('justifyCenter')"><i class="fas fa-align-center"></i></button>
    <button app-click="exec('justifyRight')"><i class="fas fa-align-right"></i></button>
    <button app-click="exec('justifyFull')"><i class="fas fa-align-justify"></i></button>
    <div class="spacer"></div>
    <button app-click="exec('insertForm')"><i class="fas fa-list-alt"></i></button>

</div>
