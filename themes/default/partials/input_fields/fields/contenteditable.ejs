<%
    var new_prefix = 'new.'

    if (typeof obj_prefix == 'undefined' || obj_prefix == false){
        obj_prefix = ''
    } else {
        obj_prefix = obj_prefix+'.'
    }

    if (typeof array_obj != 'undefined'){
        if (array_obj === true){
            new_prefix = ''
        } else if (typeof array_obj == 'string'){
            new_prefix = 'new.'+array_obj+'.'
        }
    }
%>

<div class="input-contenteditable field-<%- obj_prefix %><%- item.name %>">
    <label><%- view.functions.parseName(item.name) %></label>
    <div class="input-contenteditable-wrap">
        <%- include(view.basedir+'/themes/default/partials/editor_buttons.ejs',{editor_button_type:'blog'}) %>
        <div class="large resize contenteditable" app-model="<%- new_prefix %><%- obj_prefix %><%- item.name %>" contenteditable="true"></div>
    </div>
</div>
