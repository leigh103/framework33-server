<%
    var new_prefix = 'new.'
    var input_type

    if (typeof obj_prefix == 'undefined' || obj_prefix == false){
        obj_prefix = ''
    } else {
        obj_prefix = obj_prefix+'.'
    }

    if (typeof array_obj != 'undefined'){
        if (array_obj === true){
            new_prefix = ''
        } else if (array_obj == 'new_array'){
            new_prefix = 'new.new_array.'
            obj_prefix = ''
        } else if (typeof array_obj == 'string'){
            new_prefix = ''
        }
    }
%>

<div class="input-contenteditable field-<%- obj_prefix %><%- item.name %>">
    <label><%- view.functions.parseName(item.name) %></label>
    <div class="input-contenteditable-wrap">
        <div class="large resize contenteditable" app-model="<%- new_prefix %><%- obj_prefix %><%- item.name %>" contenteditable="true" <% if (typeof item.type != 'undefined' && item.type == 'data'){ %>data-keep-format<% } %>></div>
    </div>
</div>
