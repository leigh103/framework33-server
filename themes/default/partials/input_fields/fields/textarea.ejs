<%
    if (typeof obj_prefix == 'undefined' || obj_prefix == false){
        obj_prefix = ''
    } else {
        obj_prefix = obj_prefix+'.'
    }
%>

<div class="input-textarea field-<%- item.name %>">
    <%- max_characters %>
    <label><%- view.functions.parseName(item.name) %><%- max_chars_text %></label>
    <textarea app-model="new.<%- obj_prefix %><%- item.name %>" placeholder="<%- item.placeholder %>"></textarea>
</div>
