$column_width = 20rem

#calendar {

    &-loader {
        transition: 0.3s opacity ease;
        opacity: 1
        &.loaded {
            opacity: 0
        }
    }

    &-view {
        transition: 0.3s opacity ease;
        opacity: 0
        &.loaded {
            opacity: 1
        }
    }

}

.calendar {

    &.providers {

        &.day {

            height: 100vh;
            width: 100vw;
            overflow-x: auto;
            overflow-y: hidden;
            white-space: nowrap;

            .provider-wrap, .slots-wrap {
                display: flex;
                flex-direction: row;
                width: auto;
                white-space: nowrap;
            }

            .provider-wrap {
                height: 4rem;
            }

            .slots-wrap {
                position: relative;
                height: 100vh;
                overflow-x: hidden;
                overflow-y: scroll;
            }

            for $i in (1..30){

                &.col-{$i} {
                    .provider-wrap, .slots-wrap {
                        min-width: 'calc(100vw - %s)' % $dashboard-side-nav-width;
                        width: "calc((%s * %s) + %s)" % ($column_width $i $border-radius)
                    }
                }

            }

            .column {
                flex: 1 1 $column_width;
                position: relative;
                display: inline-block;
                padding-right: 1rem;

                &.provider {
                    height: 100%;
                    display: inline-flex;
                    align-items: center;
                    justify-content: flex-start;
                }

                .slot {
                    display: block;
                    height: 1px;
                    width: 100%;

                    &:nth-child(15n){
                        -webkit-box-shadow: 0px 1px 0px 0px rgba(0,0,0,0.1);
                        -moz-box-shadow: 0px 1px 0px 0px rgba(0,0,0,0.1);
                        box-shadow: 0px 1px 0px 0px rgba(0,0,0,0.1);
                    }

                    &:nth-child(60n){
                        -webkit-box-shadow: 0px 1px 0px 0px rgba(0,0,0,0.2);
                        -moz-box-shadow: 0px 1px 0px 0px rgba(0,0,0,0.2);
                        box-shadow: 0px 1px 0px 0px rgba(0,0,0,0.2);
                    }
                }
            }

        }

    }

}
