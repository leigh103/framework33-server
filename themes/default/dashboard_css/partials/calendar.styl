$column_width = 20rem

.calendar {

    &.providers {

        &.day {

            height: 100vh;
            width: 100vw;
            overflow-x: auto;
            overflow-y: hidden;
            white-space: nowrap;

            .provider-wrap, .slots-wrap {
                height: 4rem;
                display: block;
                width: auto;
                white-space: nowrap;
            }

            .slots-wrap {
                height: 100vh;
                overflow-x: hidden;
                overflow-y: scroll;
            }

            for $i in (1..30){

                &.col-{$i} {
                    .slots-wrap {
                        width: "calc(%s * %s)" % ($column_width $i)
                    }
                }

            }

            .column {

                min-width: $column_width;
                display: inline-block;
                padding-left: 1rem;

                .slot {
                    height: 1px;
                    width: 100%;

                    &:nth-child(15n){
                        -webkit-box-shadow: 0px 1px 0px 0px rgba(0,0,0,0.2);
                        -moz-box-shadow: 0px 1px 0px 0px rgba(0,0,0,0.2);
                        box-shadow: 0px 1px 0px 0px rgba(0,0,0,0.2);
                    }
                }
            }

        }

    }

}
