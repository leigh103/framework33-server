
    .burger {
        display: none;
        cursor: pointer;
        @media $small {
            display: flex;
        }
    }

.side-nav {

    height: 100vh;
    display: flex;
    flex-direction: column;
    overflow-y: hidden;
    overflow-x: hidden;
    text-align: left;
    font-size: 1rem;
    z-index: 1;
    color: $dashboard-color-grey;
    flex: 0 0 $dashboard-side-nav-width;
    transition: width 0.5s ease;

    &.expand {
        flex:0 0 $dashboard-side-nav-width-open;
    }

    .header {
        display: none;
        padding: 0 1.35rem;

        @media $small {
            display: flex;
            flex: 0 0 $dashboard-mobile-row-height;
        }

        span.icon {
            background-color: $dashboard-color-grey;
        }
    }

    .links {
        flex: 1;
        overflow-x: hidden;
        overflow-y: auto;
        padding-top: 0.5rem;

        @media $small {
            padding-top:0;
        }

        .link {

            a {
                display: flex;
                align-items: center;
                justify-content: flex-start;
                width:100%;
                height: 3.35rem;
                padding: 0 1.35rem;
                color: $dashboard-color-black;
                cursor: pointer;

                @media $medium {
                    padding: 0 1rem;
                }

                @media $small {
                    height: $dashboard-mobile-row-height;
                    padding: 0 1.5rem;
                    background: $dashboard-color-white;
                    border-bottom:$dashboard-row-border;
                }


                span.icon {
                    background-color: $dashboard-color-grey;
                    margin: 0;
                    @media $small {
                        background-color: $dashboard-color-primary;
                    }
                }

                &:hover {
                    color: $dashboard-color-primary;

                    span.icon {
                        background-color: $dashboard-color-primary;
                    }
                }

                &.active {

                    color: $dashboard-color-secondary;
                    // border-left: 3px solid $dashboard-color-primary;
                    span.icon {
                        background-color: $dashboard-color-secondary;
                    }
                }

                & > .icon {
                    font-size: 1.4rem;
                    height: auto;
                }

                .text {
                    padding-left: 1rem;
                    display: none;

                    @media $small {
                        display: block;
                    }
                }

                div.count {
                    position: absolute;
                    right: 3rem;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    width: 1.2rem;
                    height: 1.2rem;
                    font-size: 0.7rem;
                    background-color: $bg-secondary;
                    color: white;
                    border-radius: 50%;
                    margin-left: 1rem;
                }

            }

            .subitems {

                display: none;

            }

            img {
                height: 2rem;
                width: auto;
            }

        }

    }

    .profile {
        flex: 0 0 $dashboard-header-height;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 0 1.2rem;
        border-bottom: 1px solid #D7DDDE;

        @media $small {
            background: none;
            flex: 0 0 $dashboard-mobile-tabs-height;
        }
        .avatar {

            flex: 0 0 2.5rem;
            margin: 0 1rem 0 0;

            img {
                height: 2.5rem;
                width: 2.5rem;
            }
        }

        .text {

            flex: 1;
            display: flex;

            a {
                flex: 1;
                &:last-child {
                    text-align: right;
                }

            }
        }
    }

    a {
        display: block;
        color: $dashboard-text-black;
    }


    @media $desktop {
        flex: 0 0 $dashboard-side-nav-width;
        .text {
            display: none;
        }

        &.expand {
            .links .link a .text {
                display: flex;
            }
        }
    }

    @media $small {

        position: absolute;
        top: 0;
        left: 0;
        height: 100vh;
        width: 100vw;

        &.expand {
            width: 100vw;
        }

    }

}
