
    .burger {
        display: none;
        cursor: pointer;
        @media $small {
            display: flex;
        }
    }

.side-nav {
    height: 100vh;
    display: flex;
    flex-direction: column;
    overflow-y: hidden;
    overflow-x: hidden;
    text-align: left;
    font-size: 1rem;
    z-index: 1;
    color: $dashboard-color-grey;

    transition: all 0.5s ease;

    @media $desktop {
        flex: 0 0 18rem;
    }

    @media $medium {
        flex: 0 0 12rem;
    }

    @media $small {

        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 100vw;

    }

    &.collapse {
        @media $desktop {
            flex: 0 0 4.375rem;
        }

        @media $medium {
            flex: 0 0 4.375rem;
        }

        .text {
            display: none;
        }

    }

    .header {
        flex: 0 0 4.0625rem;
        padding: 0 1.35rem;
        span.icon {
            background-color: $dashboard-color-grey;
        }
    }

    .links {
        flex: 1;
        overflow-x: hidden;
        overflow-y: auto;

        .link {

            a {
                display: flex;
                align-items: center;
                justify-content: center;
                width:100%;
                height: 3.4375rem;
                padding: 0 1.35rem;
                color: $dashboard-color-grey;

                @media $medium {
                    padding: 0 1rem;
                }

                cursor: pointer;

                span.icon {
                    background-color: $dashboard-color-grey;
                    margin: 0;
                }

                &:hover {
                    color: $dashboard-color-primary;

                    span.icon {
                        background-color: $dashboard-color-primary;
                    }
                }

                &.active {
                    background-color: $bg-light-grey;
                    color: $dashboard-color-primary;
                    // border-left: 3px solid $dashboard-color-primary;
                    span.icon {
                        background-color: $dashboard-color-primary;
                    }
                }

                & > .icon {
                    font-size: 1.4rem;
                    height: auto;
                }



                div.count {
                    position: absolute;
                    right: 3rem;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    width: 1.2rem;
                    height: 1.2rem;
                    font-size: 0.7rem;
                    background-color: $bg-secondary;
                    color: white;
                    border-radius: 50%;
                    margin-left: 1rem;
                }

            }

            .subitems {

                display: none;

            }

            img {
                height: 2rem;
                width: auto;
            }

        }

    }

    .profile {
        flex: 0 0 4.7rem;
        display: flex;
        align-items: flex-end;
        justify-content: center;
        padding-bottom: 1.15rem;
        .avatar {
            height: 2.5rem;
            width: 2.5rem;

            @media $medium {
                height: 2rem;
                width: 2rem;
            }

            @media $small {
                height: 2rem;
                width: 2rem;
            }
        }
    }

    a {
        display: block;
        color: $text-black;
    }

}
