.editor-buttons {

    font-size: 0;
    width: 100%;
    overflow-x: auto;
    background-color: $dashboard-color-light-grey;
    height: auto;
    display: block;
    position: -webkit-sticky; /* Safari */
    position: sticky;
    top: 0;
    padding: 1rem 0.5rem;
    margin: 0.75rem 0;
    z-index: 500;

    button {
        font-size: 0.8rem;
        height: 1.5rem;
        display: inline-block;
        vertical-align: middle;
        background: none;
        border: none;
        margin:0;
        color: $dashboard-text-black;
        padding: 0 0.75rem !important;
    }

    .dropdown {
        position: absolute;
        top: 3rem;
        left: 0;
        background-color: white;
        padding: 1rem;
        z-index: 999;
        box-shadow: $shadow;

        button {
            display: block;
            width: 100%;
            text-align: left;
            height: 2rem;

            &:hover {
                background-color: #f2f2f2;
            }
        }
    }

    .spacer {
        display: none;
        height: 1rem;
        // display: inline-block;
        vertical-align: middle;
        width: 2px;
        border-left: 2px solid #f2f2f2;
        margin: 0.5rem 1rem 0 1rem;
    }

}
