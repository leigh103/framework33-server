.tabs {

    a {

        display: inline-block;
        text-align: center;
        padding: 0.5rem 0;
        margin: 0 1.5rem 0 0;
        vertical-align: middle;
        font-size: 0.875rem;

        &.active {
            border-bottom: 2px solid $dashboard-bg-secondary
        }

        &:hover {
            color: $dashboard-text-black !important;
        }
    }

    @media $small {

        display: block;
        white-space: nowrap;
        font-size: 0;
        overflow-x: auto;
        overflow-y: hidden;

        a {
            font-size: 0.875rem;
        }

    }

}

.actions {

    .tabs {

        flex: 1;
        overflow-x: scroll;
        overflow-y: hidden;
        height: $dashboard-mobile-tabs-height;

        a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: $dashboard-color-dark-grey;
            height: 100%;
            padding: 0 1.5rem;
            margin:0;
            -webkit-box-shadow: 0px $border-radius 0px 0px rgba(255,255,255,1);
            -moz-box-shadow: 0px $border-radius 0px 0px rgba(255,255,255,1);
            box-shadow: 0px $border-radius 0px 0px rgba(255,255,255,1);

            &.active {
                background-color: white;
                border: none;
                font-weight: bold;
            }

            .counter {
                margin-left: 0.2rem;
            }

            @media $small {
                font-size: 0.875rem;
                border-top-right-radius:0px;
                border-top-left-radius:0px;
                box-shadow: none;

            }

        }

    }

}
