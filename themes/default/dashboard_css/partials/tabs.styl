.tabs {

    a {

        display: inline-block;
        text-align: center;
        padding: 0.5rem 0;
        margin: 0 1.5rem 0 0;
        vertical-align: middle;

        &.active {
            border-bottom: 2px solid $dashboard-bg-secondary
        }
    }

    @media $small {

        display: block;
        white-space: nowrap;
        font-size: 0;
        overflow-x: auto;
        overflow-y: hidden;

        a {
            font-size: 1rem;
        }

    }

}

.actions {

    .tabs {

        flex: 1;
        overflow-x: scroll;
        overflow-y: hidden;
        height: 2.8125rem;

        @media $small {
            height: $dashboard-mobile-row-height;
        }

        a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: $dashboard-color-dark-grey;
            height: 100%;
            padding: 0 1.5rem;
            margin:0;
            border-top-right-radius:$border-radius;
            border-top-left-radius:$border-radius;
            -webkit-box-shadow: 0px $border-radius 0px 0px rgba(255,255,255,1);
            -moz-box-shadow: 0px $border-radius 0px 0px rgba(255,255,255,1);
            box-shadow: 0px $border-radius 0px 0px rgba(255,255,255,1);

            &.active {
                background-color: white;
                border: none;
                font-weight: bold;
            }

            .counter {
                margin-left: 0.2rem;
            }

            @media $small {
                border-top-right-radius:0px;
                border-top-left-radius:0px;
                box-shadow: none;

            }

        }

    }

}
