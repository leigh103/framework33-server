modal {

    &-auto {

        & > section {

            border-radius: $border-radius;

            header {
                background-color: $dashboard-color-light-grey;
                color: $dashboard-text-black;
                border-bottom: 1px solid #D7DDDE;
                flex: 0 0 $dashboard-header-height;

                & > div:first-child {
                    font-size: 1.375rem;
                    font-weight: 700;
                }

                span.icon {
                    background-color: $dashboard-text-black;
                    height: 1.5rem;
                    width: 1.5rem;
                }

            }

            section.body {

                max-width: 60vw;
                padding: 1.5rem 2rem 2rem 2rem;
                background-color: $dashboard-color-light-grey;
                border-bottom-left-radius: $border-radius;
                border-bottom-right-radius: $border-radius;
                // max-width: 60vw;

                .tabs {
                    background-color: $dashboard-color-light-grey;
                }

                input, select, textarea, date-picker .value {
                    background-color: white;
                }

                @media $small {
                    max-width: 80vw;
                }

                @media $small {
                    max-width: 100vw;
                    padding-bottom: 8rem;
                }
            }

        }

        &.tabbed {
            & > section {
                section.body {
                    padding: 0;
                }
            }
        }

        &.body-white {
            & > section {
                section.body {
                    background-color:white;
                }
            }
        }

    }

}
