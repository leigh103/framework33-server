.text {
    &-light-grey {
        color: $dashboard-light-grey
    }
    &-primary {
        color: $dashboard-color-primary;
    }
    &-error, &-red {
        color: $dashboard-color-red;
    }

    &-secondary {
        color: $dashboard-color-secondary;
    }
    &-grey {
        color: $dashboard-color-grey;
    }
    &-black {
        color: $dashboard-color-dark-grey;
    }
    &-white {
        color: $dashboard-color-white;
    }
}

.bg {
    &-dark-grey {
        background-color: $dashboard-bg-dark-grey
    }
    &-light-grey {
        background-color: $dashboard-color-light-grey
    }
    &-light-grey2 {
        background-color: $dashboard-color-light-grey2
    }
    &-mid-grey {
        background-color: $dashboard-color-mid-light-grey
    }
    &-primary {
        background-color: $dashboard-color-primary;
    }

    &-secondary {
        background-color: $dashboard-color-secondary;
    }
    &-black {
        background-color: $dashboard-color-black;
    }

    &-text-dark {
        position: relative;
        &:before {
            background-color: rgba(30,30,30,0.25);
            content:'';
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;


        }
        & > * {
            position: relative;
            z-index: 2
        }
    }
    &-white {
        background-color: $dashboard-color-white;
    }

    &-palette-1 {
        background-color: $dashboard-palette-1;
    }
    &-palette-2 {
        background-color: $dashboard-palette-2;
    }
    &-palette-3 {
        background-color: $dashboard-palette-3;
    }
    &-palette-4 {
        background-color: $dashboard-palette-4;
    }
    &-palette-5 {
        background-color: $dashboard-palette-5;
    }
    &-palette-6 {
        background-color: $dashboard-palette-6;
    }
    &-palette-7 {
        background-color: $dashboard-palette-7;
    }
    &-palette-8 {
        background-color: $dashboard-palette-8;
    }
}
