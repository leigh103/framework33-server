.dashboard {

    .mailbox {

        .messages {

            height: 100%;
            overflow-y: auto;
            padding: 1rem;

            .message-summary {

                font-size: 0.8rem;
                line-height: 1.3rem;
                background-color: #fff;
                padding: 1rem 2rem 1rem 1rem;
                margin-bottom: 0.875rem;
                border-radius: 5px;
                transition: 0.2s all ease-in

                .title {
                    font-weight: 600;

                    .date {
                        opacity: 0.5;
                    }
                }

                &.open {
                    box-shadow: $shadow;
                    transform: translateX(1rem);
                }

                &.deleted {
                    opacity: 0;
                    transform: translateX(-100%);
                }
            }
        }

        .message {
            padding: 2rem;
            height: 100%;
            overflow-y: auto
        }
    }

}
