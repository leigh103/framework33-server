.dashboard {

    .mailbox {

        .messages {

            height: 100%;
            overflow-y: auto;
            padding: 1rem;

            .message-summary {

                font-size: 0.8rem;
                line-height: 1.3rem;
                background-color: #fff;
                padding: 1rem 2rem 1rem 1rem;
                margin-bottom: 0.875rem;
                border-radius: 5px;
                transition: 0.2s all ease-in

                .title {
                    font-weight: 600;

                    .date {
                        opacity: 0.5;
                    }
                }

                .text {
                    display: flex;
                    align-items: center;
                    justify-content: flex-start;

                    .unread {
                        flex: none;
                        display: block;
                        width: 0.5rem;
                        height: 0.5rem;
                        background-color: $dashboard-color-secondary;
                        border-radius: 50%;
                        margin-right: 0.5rem;
                    }
                }

                .date {
                    font-size: 0.7rem;
                    color: $dashboard-text-grey;
                    font-style: italic;
                }

                &.open {
                    box-shadow: $shadow;
                    transform: translateX(1rem);
                }

                &.deleted {
                    opacity: 0;
                    transform: translateX(-100%);
                }

                &.read {
                    background-color: rgba(255,255,255,0.5);
                }


            }
        }

        .message {
            padding: 0.75rem 2rem 0.75rem 0.75rem;
            height: 100%;
            overflow-y: auto;

            h4 {
                font-weight:700;
            }

            .title {

                display: flex;

                .heading {
                    flex:2;
                }
                .actions {
                    flex: 1;
                    display: flex;
                    align-items: center;
                    justify-content: flex-end;
                }
            }
        }
    }

}
