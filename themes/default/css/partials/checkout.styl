.checkout {

    display: grid;
    grid-template-columns: repeat(12, 1fr);
    min-height: calc(100vh - 14rem);

    @media $small {
        grid-gap: 0;
        grid-template-columns: 1fr
    }

    &-totals {
        &-wrap {
            border-top: 1px solid #ccc;
            padding-top: 1.875rem;
            margin-bottom: 4rem;
            line-height: 2rem;
        }
    }

    .h4 {
        font-family: 'Museo Slab 700' !important;
    }

    .breadcrumbs {

        flex: 0 0 auto;
        width: 100%;
        font-size: 0.875rem;
        -webkit-box-shadow: 0px 1px 0px 0px rgba(204,204,204,1);
        -moz-box-shadow: 0px 1px 0px 0px rgba(204,204,204,1);
        box-shadow: 0px 1px 0px 0px rgba(204,204,204,1);

        margin-bottom: 2.1rem;

        a, span {
            text-transform: uppercase;
            display: inline-block;
            padding-bottom: 1rem;
            margin-left: 2.5rem;
            color: rgba(103,56,96,0.5);
            font-family: 'Lato'

            &.active {
                color: $color-secondary;
                -webkit-box-shadow: 0px 1px 0px 0px $color-secondary;
                -moz-box-shadow: 0px 1px 0px 0px $color-secondary;
                box-shadow: 0px 1px 0px 0px $color-secondary;
            }

            &:first-child {
                margin-left: 0;
            }
        }

    }

    &-items {

        grid-column-end: span 7;
        padding: 3rem 3rem 3rem 0;

        @media $medium {
            padding: 3rem 3rem 3rem 0;
            grid-column-end: span 6;
        }

        @media $small {
            padding: 3rem 0 0 0;
        }

        &-wrap {
            margin-bottom: 4rem;
        }

        &-item {

            display: flex;
            align-items: center;
            justify-content: flex-start;
            flex-direction: row;
            // display: grid;
            // grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;
            // grid-gap: 2rem;
            position: relative;
            margin-top: 1rem;

            .thumbnail {
                flex: 0 0 5rem;
                // grid-column-end: span 1;
                background-color: $bg-light-grey;
                border-radius: $border-radius;

                @media $small {
                    grid-column-end: span 2;
                }
            }

            .details {
                flex: 1;
                // grid-column-end: span 5;
                display: flex;
                flex-direction: column;
                padding: 1rem 0 1rem 1rem;

                @media $small {
                    grid-column-end: span 4;
                }

                .product {
                    flex: 1;
                    font-family: 'Lato Bold'
                    display: flex;
                    align-items: center;
                    justify-content: space-between;

                }

                .actions {
                    flex: 1;
                    display: flex;


                    .price {
                        flex: 2;
                        display: flex;
                        align-items: center;
                        justify-content: flex-end;
                    }

                    .quantity {
                        flex: none;
                        text-align: center;
                        display: flex;
                        align-items: center;
                        justify-content: flex-start;

                        .remove {
                            font-family: 'Lato'
                            font-weight: 300;
                            margin-left: 1rem;
                            font-size: 0.7rem;
                        }

                        @media $small {
                            flex: 3;
                        }

                        .decrease-item, .increase-item {
                            flex: none;
                            background-color: $bg-light-grey;
                            height: 2.5rem;
                            width: 2.5rem;
                            border-radius: $border-radius;
                            padding:0;
                            color: #aaa;
                        }

                        .item-quantity {
                            padding:0 !important;
                            text-align: center;
                            width: 3rem;
                        }

                    }
                }
            }

        }

    }

    &-details {

        grid-column-end: span 5;
        background-color: $color-cream-3;
        padding: 3rem 0 6rem 3rem;

        @media $medium {
            grid-column-end: span 6;
        }

        @media $small {
            margin: 3rem -2rem 0 -2rem;
            padding: 2rem 2rem 6rem 2rem;
        }

    }

    &-billing {
        label {
            color: $text-grey;
        }
    }

    &-shipping-method {

        height: 3.75rem;
        border-radius: $border-radius;
        background-color: rgba(255,255,255,0.6);
        display: flex;
        align-items: center;
        justify-content: flex-start;
        justify-content: space-between;
        padding: 0 2rem;
        margin-bottom: 1.25rem;

        &.selected {
            background-color: $bg-secondary;
            color: $text-white;
        }
    }

    .notification-title {
        margin-top: 3rem;
        font-size: 1.125rem;
        font-family: 'Lato Bold'
    }

    .nav-buttons {

        margin-top: 3rem;
        display: flex;

        & > div {
            flex: 1;

            a, button {
                border-radius: 25px;
                height: 50px;
            }

            &:first-child {
                .btn {
                    border: 2px solid $color-secondary;
                    background: none;
                    color: $text-black;
                }
            }

            &:last-child {
                text-align: right;
            }
        }
    }

    &-impulse {

        text-align: center;
        color: white;
        background-color: $color-secondary;

        .contain {
            min-height: 35rem;

            .flex {
                a {
                    color: white;
                }
            }
        }

        h2.heading {
            margin: 0 !important;
        }


    }

}
