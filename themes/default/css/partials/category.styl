.category {

    &.breadcrumbs {
        width: 100%;
        background-color: $color-dark-grey;

        padding: 1rem;

        @media $small {
            padding: 1rem 0
        }

        h1, a {
            text-transform: uppercase;
            color: white;
            font-size: 1.25rem;
        }

    }

    &.thumb {
        display: flex;
        flex-direction: row;
        margin-bottom: 1rem;

        .thumbnail {
            flex: 1;

            img {
                display: block;
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
        }

        .details {
            flex: 2;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: center;
            padding: 2rem;
            h2 {
                font-weight:900
            }
            p {
                margin:0
            }
        }
    }

}
