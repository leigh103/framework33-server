.category {

    &.breadcrumbs {
        width: 100%;
        background-color: #000;

        padding: 1rem;

        h1, a {
            text-transform: uppercase;
            color: white;
            font-size: 1.5rem;
        }

    }

    &.thumb {
        display: flex;
        flex-direction: row;
        margin-bottom: 1rem;

        .thumbnail {
            flex: 1;

            img {
                display: block;
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
        }

        .details {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: center;
            padding: 2rem;

            p {
                margin:0
            }
        }
    }

}
