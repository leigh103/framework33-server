html, body {
    overflow-x: hidden;
}

body {

    &:not(.dashboard):not(.fullscreen){
        .page {
            min-height: calc(100vh - 14rem);

            & > .h-100 {
                min-height: calc(100vh - 14rem);
            }
        }

    }

    &.fullscreen {

        height: 100vh;
        height: -webkit-fill-available;

        &.no-nav {
            .page {
                height: 100vh;
                height: -webkit-fill-available;

                @media $small {
                    height: auto;
                }
            }
        }

        &:not(.no-nav) {
            .page {
                height: "calc(100vh - %s)" % $top-nav-height;

                @media $small {
                    height: auto;
                    min-height: "calc(100vh - %s)" % $top-nav-height;
                }
            }
        }

    }

}

section.body {
    min-height: calc(100vh - 4rem - 292px)
}

figure {
    margin:0;
}

.contain {
    max-width: 1400px;
    overflow-y: visible;
    @media $small {
        max-width: 100vw;
        padding-left: 2rem;
        padding-right: 2rem;
    }

    @media $medium {
        max-width: 100vw;
        padding-left: 2rem;
        padding-right: 2rem;
    }

    &.thin {
        max-width: 900px;

        @media $small {
            max-width: 100vw;
            padding-left: 2rem;
            padding-right: 2rem;
        }

        @media $medium {
            max-width: 100vw;
            padding-left: 2rem;
            padding-right: 2rem;
        }
    }

}

