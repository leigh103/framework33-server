a {
    color: $color-secondary;

    &:hover {
        color: $color-secondary;
    }
}

.btn {

    &.highlight {
        background-color: $color-primary
    }

    &.border {
        background: none;
        border: 1px solid $color-primary;
        color: $color-primary;
    }

    &.bg-primary,&.bg-secondary {
        &:hover {
            color: $text-white;
        }
    }
}

.nav {
    a {
        color: $text-white;
        text-transform: uppercase;
        font-size: 0.875rem;

        &:hover {
            color: $text-secondary
        }
    }

    &.auto-hide-shown {
        background-color: $bg-primary;
    }

    &.no-auto-hide {
        background-color: $bg-primary;
    }
}

.mega-menu {

    background-color: $bg-primary;
    a:not(.btn) {
        color: $text-white;

        &:hover {
            color: $color-secondary;
        }
    }

    .btn {
        color: $text-primary;

        &:hover {
            color: $text-secondary;
        }
    }
}

.text {
    &-light-grey {
        color: $bg-light-grey
    }
    &-primary {
        color: $color-primary;
    }
    &-error, &-red {
        color: $color-red;
    }

    &-secondary {
        color: $color-secondary;
    }
    &-black {
        color: $color-black;
    }
    &-white {
        color: $color-white;
    }
}

.bg {
    &-dark-grey {
        background-color: $bg-dark-grey
    }
    &-light-grey {
        background-color: $bg-light-grey
    }
    &-mid-grey {
        background-color: $color-mid-light-grey
    }
    &-primary {
        background-color: $bg-primary;
    }

    &-secondary {
        background-color: $bg-secondary;
    }
    &-black {
        background-color: $bg-black;
    }
    &-text-dark {
        position: relative;
        &:before {
            background-color: rgba(30,30,30,0.4);
            content:'';
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;


        }
        & > * {
            position: relative;
            z-index: 2
        }
    }
    &-white {
        background-color: $bg-white;
    }

    &-palette-1 {
        background-color: $color-palette-1;
    }
    &-palette-2 {
        background-color: $color-palette-2;
    }
    &-palette-3 {
        background-color: $color-palette-3;
    }
    &-palette-4 {
        background-color: $color-palette-4;
    }
    &-palette-5 {
        background-color: $color-palette-5;
    }
    &-palette-6 {
        background-color: $color-palette-6;
    }
    &-palette-7 {
        background-color: $color-palette-7;
    }
    &-palette-8 {
        background-color: $color-palette-8;
    }
}




.secondary-theme {

    a {
        color: $secondary-color-secondary;

        &:hover {
            color: $secondary-color-secondary;
        }
    }

    .btn {

        &.bg-primary {
            color: white;
        }

        &.highlight {
            background-color: $secondary-color-secondary
        }

        &.border {
            background: none;
            border: 1px solid $color-primary;
            color: $color-primary;
        }
    }

    .nav {
        a {
            color: $text-white;
            text-transform: uppercase;
            font-size: 0.875rem;

            &:hover {
                color: $secondary-color-primary
            }
        }

        &.auto-hide-shown {
            background-color: $secondary-color-primary;
        }

        &.no-auto-hide {
            background-color: $secondary-color-primary;
        }
    }

    .mega-menu {

        background-color: $secondary-color-primary;
        a:not(.btn) {
            color: $text-white;

            &:hover {
                color: $secondary-color-secondary;
            }
        }

        .btn {
            color: $secondary-color-primary;

            &:hover {
                color: $secondary-color-secondary;
            }
        }
    }

    .text {

        &-primary {
            color: $secondary-color-primary;
        }
        &-secondary {
            color: $secondary-color-secondary;
        }

    }

    .bg {

        &-primary {
            background-color: $secondary-color-primary;
        }

        &-secondary {
            background-color: $secondary-color-secondary;
        }

    }


}
