a {
    color: $color-secondary;

    &:hover {
        color: $color-primary;
    }
}

.mega-menu {
    a:not(.btn) {
        color: $text-white;

        &:hover {
            color: $color-secondary;
        }
    }

    .btn {
        color: $text-primary;

        &:hover {
            color: $text-secondary;
        }
    }
}

.text {
    &-light-grey {
        color: $bg-light-grey
    }
    &-primary {
        color: $color-primary;
    }
    &-error, &-red {
        color: $color-red;
    }

    &-secondary {
        color: $color-secondary;
    }
    &-black {
        color: $color-black;
    }
    &-white {
        color: $color-white;
    }
}

.bg {
    &-dark-grey {
        background-color: $bg-dark-grey
    }
    &-light-grey {
        background-color: $bg-light-grey
    }
    &-primary {
        background-color: $bg-primary;
    }

    &-secondary {
        background-color: $bg-secondary;
    }
    &-black {
        background-color: $bg-black;
    }
    &-text-dark {
        position: relative;
        &:before {
            background-color: rgba(30,30,30,0.4);
            content:'';
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;


        }
        & > * {
            position: relative;
            z-index: 2
        }
    }
    &-white {
        background-color: $bg-white;
    }
}

.btn {
    &:not(.bg-33-white):hover {
        color:white;
    }

    &.highlight {
        background-color: $color-primary
    }

    &.border {
        background: none;
        border: 1px solid $color-primary;
        color: $color-primary;
    }
}
