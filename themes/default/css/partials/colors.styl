a {
    color: $color-secondary;

    &:hover {
        color: $color-primary;
    }
}

.mega-menu {
    a:not(.btn) {
        color: $text-white;

        &:hover {
            color: $color-secondary;
        }
    }

    .btn {
        color: $text-primary;

        &:hover {
            color: $text-secondary;
        }
    }
}

.text {
    &-primary {
        color: $color-primary;
    }

    &-secondary {
        color: $color-secondary;
    }
}

.bg {
    &-light-grey {
        background-color: $bg-light-grey
    }
    &-primary {
        background-color: $color-primary;
    }

    &-secondary {
        background-color: $color-secondary;
    }
}

.btn {
    &:hover {
        color:white;
    }

    &.highlight {
        background-color: $color-primary
    }

    &.border {
        background: none;
        border: 1px solid $color-primary;
        color: $color-primary;
    }
}
