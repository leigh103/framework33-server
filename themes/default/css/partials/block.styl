.block {

    &-text-hero {

        position: relative;
        min-height: 600px;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        flex-direction: column;
        overflow: hidden;

        .background {
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            &:before {
                background-color: rgba(30,30,30,0.30);
                content:'';
                display: block;
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: 1;


            }
        }

        @media $small {
            height: 80vh;
        }

        .btn {
            background-color: $color-primary;
            height: 50px;
            border-radius: 25px;
            font-size: 16px;
            font-weight: 500;
        }
    }

}
