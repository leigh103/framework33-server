
.nav {

    position: sticky;
    top:0;
    width: 100vw;
    height: $top-nav-height;
    z-index: 600;
    background-color: white;
    transition: top 0.3s;

    .links {
        @media $small {
            display: none;
        }
    }

    .logo {
        @media $small {
            grid-column: 1 / span 3;
        }
    }

    .burger {
        display: none;
        cursor: pointer;
        @media $small {
            display: flex;
        }
    }

    div.link {
        position: relative;
        display: inline-block;
        vertical-align: middle;
        height: 100%;

        a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            padding: 0 1.2rem;

            &:hover {
                color: inherit;
            }
        }

        .logo {
            padding: 0;
            text-align: left;

            a {
                display: block;
                height: 100%;
                width: 100%;
            }

            img {
                height: 2rem;
                width: auto;
            }
        }
    }

    .subitems {
        display: block;
        position: absolute;
        a {
            display: block;
        }
    }

}

.mega-menu {

    display: none;

    @media $small {
        display: block;
        position: fixed;
        text-align: left;
        top:0;
        left:0;
        background-color: $bg-primary;
        transition: transform 0.3s ease;
        transform: translateX(-100vw);
        height: 100vh;
        width: 100vw;
        padding: 2.5rem;

        z-index: 700;

        div.link {
            display: block;
            margin-bottom: 2rem;

            a, .btn {
                display: block;
                font-size: 1.25rem !important;
            }
        }

        &.open {
            transform: translateX(0);
        }
    }



}
