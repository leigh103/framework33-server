
.nav {

    position: absolute;
    top:0;
    width: 100vw;
    height: 100px;
    z-index: 600;
    border-bottom: 1px solid #FF9A9E;
    transition: top 0.3s ease, background-color 0.8s ease;

    a {
        text-transform: normal;
        font-size: 1rem;
        font-weight: 600;
    }

    &.auto-hide-shown {
        position: fixed;

        .logo {
            color: $color-secondary;
        }
    }

    &.no-auto-hide {
        position: relative;
    }

    .links {
        overflow-y: hidden;
        @media $small {
            display: none;
        }
    }

    div.link.logo {

        height: auto;
        width: 3rem;

        a.logo {
            background-color: #FFFFFF;
            -webkit-mask-image: url('/images/Melded_Icon.svg');
            mask-image: url('/images/Melded_Icon.svg');
            -webkit-mask-size: contain;
            mask-size: contain;
            -webkit-mask-position: center;
            mask-position: center;
            -webkit-mask-repeat: no-repeat;
            mask-repeat: no-repeat;
            width: 7rem;
        }


        @media $small {
            grid-column: 1 / span 3;
        }
    }

    div.link {
        // position: relative;
        display: inline-block;
        vertical-align: middle;
        height: 100%;

        a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            padding: 0 1.2rem;
        }

        .logo {
            padding: 0;
            text-align: left;

            a {
                display: block;
                height: 100%;
                width: 100%;
            }

            img {
                height: 2rem;
                width: auto;
            }
        }

        .subitems {

            display: block;
            position: absolute;
            text-align: left;
            width:100vw;
            left: 0;

            height: auto;
            max-height:0px;
            overflow: hidden;

            transition: all 0.5s ease;

            &-container {
                background-color: white;

                a {
                    color: $text-primary;
                }
            }

            &.in-view {
                max-height:100vh;
                opacity: 1;
            }

            .contain {
                max-width:1140px;
                padding: 1rem 0;
            }

            a {
                display: block;
                padding:0;
                margin-bottom: 1rem;
            }
        }
    }


}

    .burger {
        color: white;
        display: none;
        cursor: pointer;
        @media $small {
            display: flex;
        }
    }

.mega-menu {

    display: none;

    @media $small {
        display: block;
        position: fixed;
        text-align: left;
        top:0;
        left:0;
        transition: transform 0.3s ease;
        transform: translateX(-100vw);
        height: 100vh;
        width: 100vw;
        padding: 2.5rem;

        z-index: 700;

        div.link {
            display: block;
            margin-bottom: 2rem;

            a, .btn {
                display: block;
                font-size: 1.25rem !important;
            }

            .subitems-container a {
                margin-top: 2rem
            }
        }

        &.open {
            transform: translateX(0);
        }
    }



}
