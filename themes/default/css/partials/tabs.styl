.tabs {

    a {

        display: inline-block;
        text-align: center;
        padding: 0.5rem 0;
        margin: 0 1.5rem 0 0;
        vertical-align: middle;

        &.active {
            border-bottom: 2px solid $bg-secondary
        }
    }

    &.border-bottom {
        border-bottom: 1px solid $color-mid-light-grey
    }

}
