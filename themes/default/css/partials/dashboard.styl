.dashboard {

    font-family: 'Nunito', sans-serif;

    height: 100vh;
    width: 100vw;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    background: $bg-light-grey;

    h1 {
        font-size: 1.5rem;
        font-weight: bold;
    }

    button, .btn {

        height: 2.5rem;
        border-radius: 1.25rem;
        font-family: inherit;

        &.context-menu {
            height: 2.5rem;
            width: 2.5rem;
            background-color: white;
            border: 1px solid #DDDDDD;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: $color-grey;

            &:hover {
                color: $color-primary;
            }
        }

        &.bg-white {
            color: $text-black;
        }

        &.no-radius {
            border-radius: 0;
        }

    }

    .header {
        display: flex;

        .title {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: flex-start;
        }

        .buttons {
            flex: 1;
            text-align: right;
            display: flex;
            align-items: center;
            justify-content: flex-end;

            .btn {
                margin-left: 1.25rem
            }
        }
    }

    .actions {

        display: flex;
        flex-direction: row;


        .tabs {
            flex: 1;
            overflow-x: scroll;
            overflow-y: hidden;
            height: 100%;

            a {
                color: $color-dark-grey;
                height: 3.75rem;
                padding: 1rem 1.875rem;
                margin:0;
                border-top-right-radius:$border-radius;
                border-top-left-radius:$border-radius;
                -webkit-box-shadow: 0px $border-radius 0px 0px rgba(255,255,255,1);
                -moz-box-shadow: 0px $border-radius 0px 0px rgba(255,255,255,1);
                box-shadow: 0px $border-radius 0px 0px rgba(255,255,255,1);

                &.active {
                    background-color: white;
                    border: none;
                    font-weight: bold;
                }

                .counter {
                    margin-left: 0.2rem;
                }
            }
        }

        .search {
            flex: 0 0 18.75rem;
            height: 100%;
            transition: all 0.5s ease;

            &.focused {
                flex: 1;
            }

            input {
                height: 3.75rem;
                border-top-right-radius:$border-radius;
                border-top-left-radius:$border-radius;
            }
        }
    }

    .widget {
        background-color: #fff;
        padding: 2rem;
        box-shadow: $shadow;
        border-radius: 5px;
        min-height: 300px;
        overflow-y: auto;

        .note {
            font-size: 0.875rem;
            background-color: #f2f2f2;
            padding: 1rem;
            margin-bottom: 0.875rem;
            border-radius: 5px;

            .title {
                font-weight: 600;

                .date {
                    opacity: 0.5;
                }
            }
        }
    }

    .table {

        border-collapse:separate;
        border-spacing: 0 1rem;
            font-size: 1rem;
        overflow-x: hidden;
        overflow-y: auto;

        &-wrap {
            background-color: white;
            padding: 0 1.875rem 2rem 1.875rem;
            display: flex;
            flex-direction: column;

            &.rounded {
                border-radius: 0;
                border-top-left-radius:$border-radius;
            }

        }

        &-inner-wrap {
            overflow-x: hidden;
            overflow-y: auto;
            height: 100%;
        }

        .row {

            &.table-header {
                color: $color-grey;
            }

            .cell {
                height: 3.875rem;
                vertical-align: middle;

                margin-bottom: 1.375rem;

                a {
                    color: $color-primary;
                    cursor: pointer;
                    font-weight: bold;
                }

                img.image, &.image img {
                    object-fit: cover;
                    height: 3rem;
                    width: 3rem;

                    &.lg {
                        height: 6rem;
                        width: 6rem;
                    }

                    &.sm {
                        height: 2rem;
                        width: 2rem;
                    }

                    &.xsm {
                        height: 1rem;
                        width: 1rem;
                    }
                }
            }
        }
    }

    .edit {

        display: grid;
        grid-template-columns: repeat(12, 1fr);
        grid-gap:2rem;

        &-wrap {
            background-color: white;
            padding: 3.125rem;
            overflow-x: hidden;
            overflow-y: auto;
            display: block;

        }

        label {
            color: $color-grey;
        }

        input, textarea, select {
            border: 1px solid #E3E3E3;
            border-radius: 4px;
            color: $color-dark-grey;
        }

        input[type=text],input[type=password],input[type=number],input[type=email], select {
            height: 2.5rem
        }

        input[type=number], .field-price input[type=text], .field-adjustment input[type=text] {
            text-align: right;
        }

        input::-webkit-outer-spin-button, input::-webkit-inner-spin-button {
            margin-left: 0.5rem;
        }

        input[type=checkbox]{
            &:after {
                border: 1px solid #E3E3E3;
            }

        }

        & > div {
            grid-column-end: span 4;
        }

        .input {

            &-image {
                grid-row-end: span 4;
            }

            &-textarea {
                grid-column-end: span 12;
                grid-row-end: span 2;
            }

            &-checkbox {
                grid-column-end: span 2;
            }

            &-contenteditable {
                grid-column-end: span 12;

                &-wrap {
                    border: 1px solid #E3E3E3;
                    padding: 0.75rem;
                }

                .contenteditable {
                    min-height: 5rem;
                }

            }

            &-object {

                label {
                    margin-top: 1rem;
                }

                &-array {

                    grid-column-end: span 12;

                    &-item {
                        margin-bottom: 2rem;
                        background-color: $color-light-grey;
                        padding: 3.125rem;
                        border-radius: $border-radius;
                    }

                    &-wrap {

                    }

                }

            }

        }
    }

    .grid {

        grid-template-columns: repeat(4,1fr);
        grid-gap: 2rem;

        @media $desktop-4k {
            grid-template-columns: repeat(6,1fr);
        }

        @media $desktop-1080p {
            grid-template-columns: repeat(5,1fr);
        }

        @media $medium {
            grid-template-columns: repeat(3,1fr);
        }

        @media $small {
            grid-template-columns: repeat(1,1fr);
        }

        &-wrap {
            padding: 2rem 0;
        }

        &-item {
            background-color: rgba(255,255,255,0.5);
            border-radius: $border-radius;
            overflow: hidden;
            display: flex;
            flex-direction: column;

            .thumbnail {
                flex: 3;
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
            .details {
                flex: 1;
                display: flex;
                background-color: white;
                padding: 1rem 1.25rem;
                text-transform: capitalize;

                div {
                    flex: 1;
                    &.context-link {
                        flex: none
                    }
                }

            }

        }

    }

    .mailbox {

        .messages {

            height: 100%;
            overflow-y: auto;
            padding: 1rem;

            .message-summary {

                font-size: 0.8rem;
                line-height: 1.3rem;
                background-color: #fff;
                padding: 1rem 2rem 1rem 1rem;
                margin-bottom: 0.875rem;
                border-radius: 5px;
                transition: 0.2s all ease-in

                .title {
                    font-weight: 600;

                    .date {
                        opacity: 0.5;
                    }
                }

                &.open {
                    box-shadow: $shadow;
                    transform: translateX(1rem);
                }

                &.deleted {
                    opacity: 0;
                    transform: translateX(-100%);
                }
            }
        }

        .message {
            padding: 2rem;
            height: 100%;
            overflow-y: auto
        }
    }

    .loader-wrap {
        position: fixed;
        display: flex;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(255,255,255,0.5)
    }

    .loader {
        position: absolute;
        top: 50%;
        left: 50%;
        overflow: hidden;

        width: 200px;
        height: 200px;

        margin-top: -100px;
        margin-left: -100px;

        perspective: 600px;
        transform-style: perserve-3d;
    }

    /* The dot */
    .dot {
        position: absolute;
        top: 50%;
        left: 50%;

        width: 20px;
        height: 20px;

        margin-left: -10px;
        margin-top: -10px;

        border-radius: 100px;

        background-color: #1e3f57;

        transform-style: perserve-3d;
        transform: rotateZ(0) translateY(0) scaleX(1);

        animation: dot 2200ms cubic-bezier(.39,.24,.63,.74) infinite;
    }

    .dot:nth-child(2) { animation-name: dot2; }
    .dot:nth-child(3) { animation-name: dot3; }
    .dot:nth-child(4) { animation-name: dot4; }

    @keyframes dot {
        0% {
        transform: rotateZ(0) translateY(0) scaleX(1);
        background-color: #1e3f57;
        }
        30% {
        transform: rotateZ(180deg) translateY(-20px) scaleX(1);
        background-color: #3c617d;
        }
        50% {
        transform: rotateZ(360deg) translateY(-20px) scaleX(1.1);
        background-color: #6bb2cd;
        }
        70% {
        transform: rotateZ(540deg) translateY(-20px) scaleX(1);
        background-color: #3c617d;
        }
        100% {
        transform: rotateZ(720deg) translateY(0) scaleX(1);
        background-color: #1e3f57;
        }
    }

    @keyframes dot2 {
        0% {
        transform: rotateZ(0deg) translateY(0) scaleX(1);
        background-color: #1e3f57;
        }
        30% {
        transform: rotateZ(180deg) translateY(-20px) scaleX(1);
        background-color: #3c617d;
        }
        50% {
        transform: rotateZ(270deg) translateY(-20px) scaleX(1.1);
        background-color: #6bb2cd;
        }
        70% {
        transform: rotateZ(360deg) translateY(-20px) scaleX(1);
        background-color: #3c617d;
        }
        100% {
        transform: rotateZ(540deg) translateY(0) scaleX(1);
        background-color: #1e3f57;
        }
    }

    @keyframes dot3 {
        0% {
        transform: rotateZ(-180deg) translateY(0) scaleX(1);
        background-color: #1e3f57;
        }
        30% {
        transform: rotateZ(0deg) translateY(-20px) scaleX(1);
        background-color: #3c617d;
        }
        50% {
        transform: rotateZ(180deg) translateY(-20px) scaleX(1.1);
        background-color: #6bb2cd;
        }
        70% {
        transform: rotateZ(360deg) translateY(-20px) scaleX(1);
        background-color: #3c617d;
        }
        100% {
        transform: rotateZ(540deg) translateY(0) scaleX(1);
        background-color: #1e3f57;
        }
    }

    @keyframes dot4 {
        0% {
        transform: rotateZ(-180deg) translateY(0) scaleX(1);
        background-color: #1e3f57;
        }
        30% {
        transform: rotateZ(0deg) translateY(-20px) scaleX(1);
        background-color: #3c617d;
        }
        50% {
        transform: rotateZ(90deg) translateY(-20px) scaleX(1.1);
        background-color: #6bb2cd;
        }
        70% {
        transform: rotateZ(180deg) translateY(-20px) scaleX(1);
        background-color: #3c617d;
        }
        100% {
        transform: rotateZ(360deg) translateY(0) scaleX(1);
        background-color: #1e3f57;
        }
    }

    .side-nav {
        height: 100vh;
        display: flex;
        flex-direction: column;
        overflow-y: hidden;
        overflow-x: hidden;
        text-align: left;
        font-size: 1rem;
        z-index: 1;
        color: $color-grey;

        transition: all 0.5s ease;

        @media $desktop {
            flex: 0 0 18rem;
        }

        @media $medium {
            flex: 0 0 12rem;
        }

        @media $small {

            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 100vw;

        }

        &.collapse {
            @media $desktop {
                flex: 0 0 4.375rem;
            }

            @media $medium {
                flex: 0 0 4.375rem;
            }

            .text {
                display: none;
            }

        }

        .header {
            flex: 0 0 4.0625rem;
            padding: 0 1.35rem;
            span.icon {
                background-color: $color-grey;
            }
        }

        .links {
            flex: 1;
            overflow-x: hidden;
            overflow-y: auto;

            .link {

                a {
                    display: flex;
                    align-items: center;
                    justify-content: flex-start;
                    width:100%;
                    height: 3.4375rem;
                    padding: 0 1.35rem;
                    color: $color-grey;

                    @media $medium {
                        padding: 0 1rem;
                    }

                    cursor: pointer;

                    span.icon {
                        background-color: $color-grey;
                    }

                    &:hover {
                        color: $color-primary;

                        span.icon {
                            background-color: $color-primary;
                        }
                    }

                    &.active {
                        background-color: $bg-light-grey;
                        color: $color-primary;
                        // border-left: 3px solid $color-primary;
                        span.icon {
                            background-color: $color-primary;
                        }
                    }

                    & > .icon {
                        font-size: 1.25rem;
                        height: auto;
                        margin: 0 1rem 0 0;
                    }



                    div.count {
                        position: absolute;
                        right: 3rem;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        width: 1.2rem;
                        height: 1.2rem;
                        font-size: 0.7rem;
                        background-color: $bg-secondary;
                        color: white;
                        border-radius: 50%;
                        margin-left: 1rem;
                    }

                }

                .subitems {

                    display: none;

                }

                img {
                    height: 2rem;
                    width: auto;
                }

            }

        }

        .profile {
            flex: 0 0 4.0625rem;
            padding: 1.5rem 1.2rem;
            .avatar {
                height: 2rem;
                width: 2rem;
            }
        }

        a {
            display: block;
            color: $text-black;
        }

    }

    .page {
        background-color: $bg-light-grey;
        height: 100vh;
        flex:1;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        overflow-x: hidden;
        padding: 0 2.625rem;
        text-align: left;
        z-index: 2;

        @media $small {

            flex: 0 0 100vw;
            padding: 2rem;
            transition: transform 0.3s ease;
            transform: translateX(0);

            &.open {
                transform: translateX(83vw);
            }

            .burger {
                padding-bottom: 1rem;
            }

        }

        .header {
            flex: 0 0 5.3125rem;
        }

        .actions {
            flex: 0 1 auto;
            max-height: 3.75rem;
        }

        .table-wrap, .edit-wrap, .grid-wrap, .list-wrap {
            flex: 1;
        }

        &-full {
            margin: -2rem;
            height: 100vh;
        }
    }

}
