.dashboard {

    height: 100vh;
    width: 100vw;
    overflow: hidden;
    display: flex;
    flex-direction: row;

    .widget {
        background-color: #fff;
        padding: 2rem;
        box-shadow: $shadow;
        border-radius: 5px;
        min-height: 300px;
        overflow-y: auto;

        .note {
            font-size: 0.875rem;
            background-color: #f2f2f2;
            padding: 1rem;
            margin-bottom: 0.875rem;
            border-radius: 5px;

            .title {
                font-weight: 600;

                .date {
                    opacity: 0.5;
                }
            }
        }
    }

    .table .row .cell {
        padding: 0.5rem;
    }

    .mailbox {

        .messages {

            background-color: $bg-light-grey;
            height: 100%;
            overflow-y: auto;
            padding: 1rem;

            .message-summary {

                font-size: 0.8rem;
                line-height: 1.3rem;
                background-color: #fff;
                padding: 1rem 2rem 1rem 1rem;
                margin-bottom: 0.875rem;
                border-radius: 5px;
                transition: 0.2s all ease-in

                .title {
                    font-weight: 600;

                    .date {
                        opacity: 0.5;
                    }
                }

                &.open {
                    box-shadow: $shadow;
                    transform: translateX(1rem);
                }

                &.deleted {
                    opacity: 0;
                    transform: translateX(-100%);
                }
            }
        }

        .message {
            padding: 2rem;
            height: 100%;
            overflow-y: auto
        }
    }

    .side-nav {
        height: 100vh;

        overflow-y: auto;
        overflow-x: hidden;
        // background-color: $color-dark-grey;
        text-align: left;
        font-size: 0.9rem;
        z-index: 1;

        @media $desktop {
            flex: 0 0 18rem;
        }

        @media $medium {
            flex: 0 0 12rem;
        }

        @media $small {

            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 100vw;

        }

        .header {
            height: 13.4rem;
            padding: 3.2rem 3rem 0 3rem;

            @media $medium {
                padding: 3.2rem 1rem
            }

        }

        .logo {

            display: flex;
            align-items: center;
            justify-content: flex-start;
            width:100%;
            height: 3.5rem;
            margin-bottom: 1rem;

            a {
                display:block;
                height: 100%;
                width: 100%;
            }

            img {
                display: block;
                height: 100%;
                width: auto;
            }
        }

        .user-info {
            margin-bottom: 2rem;
        }

        .link {

            a {
                display: flex;
                align-items: center;
                justify-content: flex-start;
                width:100%;
                height: 3rem;
                padding: 0 3rem;

                @media $medium {
                    padding: 0 1rem;
                }

                cursor: pointer;

                &:hover {
                    background-color: rgba(255,255,255,0.5)
                }

                &.active {
                    background-color: $bg-light-grey;
                    border-left: 3px solid $color-primary;
                }

                div.count {
                    position: absolute;
                    right: 3rem;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    width: 1.2rem;
                    height: 1.2rem;
                    font-size: 0.7rem;
                    background-color: $bg-secondary;
                    color: white;
                    border-radius: 50%;
                    margin-left: 1rem;
                }

            }

            .subitems {

                a {
                    display: flex;
                    align-items: center;
                    justify-content: flex-start;
                    width:100%;
                    height: 2.5rem;
                    padding: 0 2rem 0 4rem;

                    @media $medium {
                        padding: 0 2rem;
                    }

                    cursor: pointer;
                    font-size: 0.9em;

                    &:hover, &.active {
                        background-color: rgba(255,255,255,0.2)
                    }

                    &:last-child {
                        margin-bottom: 1rem;
                    }
                }

            }

            img {
                height: 2rem;
                width: auto;
            }


        }

        a {
            display: block;
            color: $text-black;
        }
    }

    .page {
        background-color: $bg-light-grey;
        height: 100vh;
        flex:1;
        overflow-y: auto;
        overflow-x: hidden;
        padding: 3rem;
        text-align: left;
        z-index: 2;

        @media $small {

            flex: 0 0 100vw;
            padding: 2rem;
            transition: transform 0.3s ease;
            transform: translateX(0);

            &.open {
                transform: translateX(83vw);
            }

            .burger {
                padding-bottom: 1rem;
            }

        }

        .table-wrap .table .row:not(.table-header):hover .cell {
            background-color: rgba(0,0,0,0.05)
        }

        .header {
            @media $small {
                height: auto;
            }
        }

        &-full {
            margin: -2rem;
            height: 100vh;
        }
    }

}
