$carousel-arrow-width = 3rem

.carousel {

    display: flex;
    flex-direction: row;
    flex-flow: row wrap;
    position: relative;
    width: 100%;
    height: 100%;
    min-height: $carousel-arrow-width;
    margin: auto;
    overflow-x: visible;
    overflow-y: hidden;
    padding: 0 $carousel-arrow-width;

    .slides {
        font-size: 0;
        flex: 1;
        display: block;
        white-space: nowrap;
        height: 100%;
        overflow: scroll;

        .slide {
            transition: left 1s ease;
            position: relative;
            font-size: 1rem;
            display: inline-block;
            vertical-align: middle;
            width: 100%;
            height: 100%;
            left: 0;
            white-space: normal;
        }
    }


    .arrow {
        flex: none;
        display: flex;
        align-items: center;
        justify-content: center;
        height: $carousel-arrow-width;
        width: $carousel-arrow-width;
        cursor: pointer;
        z-index:50;

        &-left {
            left: 0;

            &:after {
                display: block;
                content: '';
                border: 1px solid #fff;
                border-width: 0 0 1px 1px ;
                width: 60%;
                height: 60%;
                transform: rotate(45deg);

            }

            &.dark {

                &:after {
                    border-color: #222;
                }
            }


        }

        &-right {
            right: 0;

            &:after {
                display: block;
                content: '';
                border: 1px solid #fff;
                border-width: 1px 1px 0 0 ;
                width: 60%;
                height: 60%;
                transform: rotate(45deg);

            }

            &.dark {

                &:after {
                    border-color: #222;
                }
            }
        }

    }

    .dots {
        flex: none;
        width: 100%;
        text-align: center;

        .dot {
            display: inline-block;
            vertical-align: middle;
            width: 1rem;
            height: 1rem;
            border: 2px solid grey;
            border-radius: 50%;
            margin: 0 1rem;

            &.selected {
                background-color: grey;
            }
        }
    }

}
