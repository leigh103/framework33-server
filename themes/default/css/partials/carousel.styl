$carousel-arrow-width = 3rem

.carousel {

    display: block;
    position: relative;
    width: 100%;
    height: 100%;
    min-height: $carousel-arrow-width;
    overflow: visible;

    .slides {
        font-size: 0;
        flex: 1;
        display: flex;
        flex-direction: row;
        white-space: nowrap;
        align-self:stretch;
        overflow: hidden;

        .slide {
            transition: left 1s ease;
            position: relative;
            font-size: 1rem;
            display: block;
            flex: 0 0 100%;
            align-self:stretch;
            left: 0;
            white-space: normal;
            padding-bottom: 2rem;
            background-size: cover;
            background-position: center;
        }
    }

    .arrow {

        position: absolute;
        height: 100%;
        top:0;
        display: flex;
        align-items: center;
        justify-content: center;
        align-self:stretch;
        cursor: pointer;
        z-index:50;

        &-left {

            left: 1.4rem;

            &:after {

                display: block;
                content: '';
                border: 1px solid #999;
                border-width: 0 0 1px 1px ;
                width: $carousel-arrow-width;
                height: $carousel-arrow-width;
                transform: rotate(45deg);

                @media $small {
                    display: none;
                }

                @media $medium {
                    display: none;
                }


            }


        }

        &-right {

            right:1rem;

            &:after {

                display: block;
                content: '';
                border: 1px solid #999;
                border-width: 1px 1px 0 0 ;
                width: $carousel-arrow-width;
                height: $carousel-arrow-width;
                transform: rotate(45deg);

                @media $small {
                    display: none;
                }

                @media $medium {
                    display: none;
                }

            }

        }

    }

    .dots {
        flex: none;
        width: 100%;
        position: absolute;
        bottom: 1.6rem;
        text-align: center;
        margin-top: 3rem;

        .dot {
            display: inline-block;
            vertical-align: middle;
            width: 1rem;
            height: 1rem;
            border: 2px solid #999;
            border-radius: 50%;
            margin: 0 1rem;

            &.selected {
                background-color: #999;
            }
        }
    }

}
