.context {

    &.dropdown {
        position: fixed;
        left: 0;
        right:auto;
        top: 0;
        min-width:150px;
        background-color: white;
        font-size: 0.875rem !important;

        border: 1px solid $color-primary;
        border-radius: $border-radius;

        box-shadow: 0px 4px 12px rgba(0,0,0,0.1);
        padding: 0rem;
        z-index: 750;

        &.from-button {
            border-top-right-radius: 0;
            border-top-left-radius: 1.25rem;
        }

        &.right {
            left: auto;
            right:0;
        }

        .link {
            display: block;
            cursor: pointer;
            padding: 0.5rem 1.4rem;
            padding-top: calc(0.5rem - 1px);
            color: $text-black;

            &:hover {
                color: $color-primary;
            }

            &:last-child {
                margin-bottom: 0;
            }
        }

        .spacer {
            border-bottom: 1px solid #E8E8E8;
            margin: 0.4rem 0;
        }

        i, .icon {
            width: 1em;
            margin-right: 0.5em;
            color: $color-primary
        }
    }

}

.appointment .context.dropdown {
    left: auto;
    right: 0;
    top: 2rem;

    @media small {
        right: 0;
    }
}

.btn + .context {
    min-width:10rem;
    top: 2.188rem;
    padding: 0.375rem;

    @media small {
        min-width:70vw;
    }
