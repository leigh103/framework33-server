.context {

    &.dropdown {
        position: fixed;
        left: 0;
        right:auto;
        top: 0;
        min-width:150px;
        background-color: $bg-light-grey;
        font-size: 0.875em !important;
        color: $brand_black;
        border-radius: $border-radius;
        box-shadow: $shadow;
        padding: 0.4rem;
        z-index: 750;

        &.right {
            left: auto;
            right:0;
        }

        .link {
            display: block;
            cursor: pointer;
            font-weight: 400;
            color: $color-primary;
            padding: 0.5rem 1rem;


            &:hover {
                background-color: rgba(255,255,255,0.5)
            }

            &:last-child {
                margin-bottom: 0;
            }
        }

        .spacer {
            border-bottom: 1px solid #E8E8E8;
            margin: 0.4rem 0;
        }

        i, .icon {
            width: 1em;
            margin-right: 0.5em;
            color: $color-primary
        }
    }

}

.appointment .context.dropdown {
    left: auto;
    right: 0;
    top: 2rem;

    @media small {
        right: 0;
    }
}

.btn + .context {
    min-width:10rem;
    top: 2.188rem;
    padding: 0.375rem;

    @media small {
        min-width:70vw;
    }
