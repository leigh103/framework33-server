.blog {

    background-color: $color-cream-3;

    h1, h2, h3, h4 {
        font-family: 'Museo Slab 700'
    }

    .article {

        &-left {
            grid-column-end: span 8
        }

        &-right {
            grid-column-end: span 4
        }

        @media $small {
            &-left {
                grid-column-end: span 1
            }

            &-right {
                grid-column-end: span 1
            }
        }

        display: block;

        img.thumb {

            width: 100%;
            height: 28.125rem;
            border-radius: $border-radius;
            margin: 0 2rem 2rem 0;

        }

    }

    .btn {
        background: none;
        border: none;
        padding:0;
        color: $text-secondary;
        font-family: 'Lato';
        font-size: 1rem;
        span.icon {
            margin-top: 2px;
        }
    }

    .date {
        margin-top: 0.3rem;
        font-family: 'Lato Bold'
    }

    .sharing {
        margin-top: 2rem;

        a {
            margin-right: 1rem;
        }
    }

    .recent-articles {
        background-color: white;
        padding: 2rem;
        border-radius: $border-radius;
        width: 100%;

        p.date {
            font-family: 'Lato';
            color: $text-black;
        }

                a {
                    display: block;
                    margin-bottom: 2rem;

                    &:last-of-type {
                        margin-bottom: 0;

                        p.date {
                            margin-bottom: 0;
                        }
                    }
                }
    }

    &.list {

        background-color: $color-cream-3;

        .article {

            display: flex;
            background-color: white;
            border-radius: $border-radius;
            overflow: hidden;


            .thumbnail {

                flex: 1;
                width: 100%;

                img {
                    display: block;
                    height: 100%;
                    width: 100%;
                    object-fit: cover;
                }

            }

            .details {
                flex: 2;
                padding: 1.75rem 2rem;

                p.date {
                    margin-top: 0.3rem;
                    font-family: 'Lato Bold'
                }

                p.excerpt {
                    margin-bottom: 0;
                }
            }

        }
    }

}
