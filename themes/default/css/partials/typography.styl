h1, h2, h3, h4, h5, h6 {
    font-weight: 300;
}

.h5 {
    font-size: 1.25rem !important
}

.h6 {
    font-size: 1.12rem !important
}

.p {
    font-size: 1rem !important
}

html, body {
    font-family: 'Nunito', sans-serif;
}

.text-dropshadow {
    text-shadow: 0.15em 0.15em 0px $text-grey;
}

.text-overlay {
    text-shadow: 0px 0px 8rem rgba(0,0,0,1);
}
