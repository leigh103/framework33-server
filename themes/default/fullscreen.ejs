<%- include partials/head.ejs %>

    <body class="bg-white fullscreen <% if (typeof show_top_nav == 'undefined' || show_top_nav === false){ %>no-nav<% } %> overflow-hidden">

        <div class="notification" app-show="view.notification.msg" app-click="view.notification = {}" data-animation="{'enter':'slide-left','exit':'slide-left'}" app-class="view.notification.type">
            <div app-bind="view.notification.msg" class="text pr-2">This is a message</div>
            <div class="icon"><span class="icon white" app-class="view.notification.icon"></span></div>
        </div>
        
        <% if (typeof show_top_nav != 'undefined' && show_top_nav === true){ %>
            <%- include partials/top_nav.ejs %>
        <% } %>

        <%- body -%>

        <%- include partials/scripts.ejs %>

        <% if (typeof include_scripts != 'undefined') { %>

            <% include_scripts.forEach((script,i)=>{ %>
                <% if (fs.existsSync(view.basedir+'/components/'+script)) { %>
                    <%- include(view.basedir+'/components/'+script) %>
                <% } %>
            <% }) %>

        <% } %>
    </body>
</html>
