<%- include partials/head.ejs %>

    <body class="bg-white vh-100 vw-100 overflow-hidden">

        <div class="notification" app-show="view.notification.msg" app-click="view.notification = {}" anim="{'enter':'slide-left','exit':'slide-left'}">
            <div class="background" app-class="view.notification.type"></div>
            <div app-bind="view.notification.msg" class="text pr-2">This is a message</div>
            <div class="icon"><i class="fas" app-class="view.notification.icon"></i></div>
        </div>

        <%- include partials/top_nav.ejs %>

        <%- body -%>

        <%- include partials/scripts.ejs %>

        <% if (typeof include_scripts != 'undefined') { %>

            <% include_scripts.forEach((script,i)=>{ %>
                <% if (fs.existsSync(view.basedir+'/components/'+script)) { %>
                    <%- include(view.basedir+'/components/'+script) %>
                <% } %>
            <% }) %>

        <% } %>
    </body>
</html>
